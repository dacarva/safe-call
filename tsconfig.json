{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./",
		"baseUrl": "./",
		"paths": {
			"*": ["node_modules/*", "packages/*"]
		}
	},
	"include": ["packages/**/*", "contracts/**/*"],
	"exclude": ["node_modules", "dist"]
}
